@model YourProjectToolRental.Models.RentalItem

@{
    ViewBag.Title = "DeleteRentedTool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Rented Tool</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RentalItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RentalId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentalId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssetId)
        </dt>

		<dd>
			@Model.Tools.FirstOrDefault(m => m.Value.AsInt() == Model.AssetId).Text
